/**app.wxss**/
/*公共样式表*/
page{
  font-family: "Microsoft YaHei";
  background-color: #fff;
  /*小程序自带兼容插件，不需前缀*/
  display: flex;
  flex-direction: column;
}
.page-header{
  /*设置为弹性盒模型*/
  display: flex;
  /*弹性盒模型横向居中*/
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}
.page-header-text{
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
  text-align: center;
}
.page-body{
  display: flex;
/*把剩余空间占满*/
  flex: 1;
  flex-direction: column;
}
.item{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}
.item .poster{
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}
.item .meta{
  flex: 1;
}
.item .title,.item .sub-title{
  display: block;
  margin-bottom: 14rpx;
}
.item .title{
  font-size: 32rpx;
}
.item .sub-title{
  font-size: 22rpx;
  color: #c0c0c0;
}
.item .artists{
  font-size: 26rpx;
  color: #999;
}
.item .rating{
  font-size: 32rpx;
  font-weight: bold;
  color: red;
}